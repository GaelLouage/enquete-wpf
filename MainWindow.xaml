<Window x:Class="Enquete.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Enquete"
        mc:Ignorable="d"
        Title="Enquete" Height="450" Width="600">
    <Grid Loaded="Grid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtEnquete" Margin="50,0,0,0" Grid.ColumnSpan="2" Grid.RowSpan="3" FontSize="25" VerticalAlignment="Center" />
        <Button x:Name="btnVerwerken" Content="Verwerken" Grid.Row="3" Margin="30" Click="btnVerwerken_Click"/>
        <Button x:Name="btnSluiten" Content="Sluiten" Grid.Row="3" Grid.Column="2" Margin="30" Click="btnSluiten_Click"/>
    </Grid>
</Window>
